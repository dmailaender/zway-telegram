{
	"singleton": false,
	"dependencies": [],
	"category": "notifications",
	"author": "David Mail√§nder",
	"homepage": "https://mailaender.it",
	"icon": "icon.png",
	"moduleName": "TelegramNotifier",
	"version": "1.0.0",
	"maturity": "stable",
	"repository": {
		"type": "git",
		"source": "https://github.com/dmailaender/zway-telegram"
	},
	"defaults": {
		"title": "__m_title__",
		"description": "__m_descr__",
		"defaultMessage": "$TIME: $DEVICE = $VALUE",
		"forwardAllNotifications": true,
		"deviceNotifications": [{}],
		"notificationInterval": "09:00, 12:00, 15:00, 18:00, 21:00, 00:00",
		"logLevel": 1
	},
	"schema": {
		"type": "object",
		"properties": {
			"token": {
				"required": true
			},
			"chatId": {
				"required": true
			},
			"defaultMessage": {},
			"forwardAllNotifications": {
				"type": "boolean"
			},
			"collectDefaultMessages": {
				"type": "boolean"
			},
			"deviceNotifications": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"deviceId": {
							"datasource": "namespaces",
							"enum": "namespaces:devices_all:deviceId"
						},
						"value": {
							"type": "string"
						},
						"message": {
							"type": "string"
						},
						"options": {
							"type": "string",
							"enum": ["collect", "ignore"]
						}
					}
				}
			},
			"notificationInterval": {},
			"logLevel": {
				"type": "select",
				"enum": [
					1,
					2
				]
			}
		}
	},
	"options": {
		"fields": {
			"token": {
				"label": "__l_token__",				
				"type": "password",
				"required": true
			},
			"chatId": {
				"label": "__l_chat_id__",
				"required": true
			},
			"defaultMessage": {
				"label": "__l_default_message__"
			},
			"forwardAllNotifications": {
				"type": "checkbox",
				"rightLabel": "__rl_forward_all__"
			},
			"collectDefaultMessages": {
				"type": "checkbox",
				"rightLabel": "__rl_collect_default__"
			},
			"deviceNotifications": {
				"title": "__l_devices__",
				"type": "table",				
				"items": {
					"fields": {
						"deviceId": {
							"label": "__l_device_id__",
							"type": "select",
							"datasource": "namespaces",
							"field": "optionLabels",
							"optionLabels": "namespaces:devices_all:deviceName"
						},
						"value": {
							"label": "__l_value__"
						},
						"message": {
							"label": "__l_message__"
						},
						"options": {
							"label": "__l_options__",
							"type": "select",
							"optionLabels": [
								"__l_collect__",
								"__l_ignore__"
							]
						}
					}
				}
			},
			"notificationInterval": {
				"label": "__l_interval__"
			},
			"logLevel": {
				"label": "__l_log_level__",
				"type": "select",
				"optionLabels": [
					"__l_log_error__",
					"__l_log_all__"
				],
				"noneLabel": "__l_log_none__"
			}
		}
	}
}
